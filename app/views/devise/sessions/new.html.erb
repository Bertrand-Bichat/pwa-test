<div class="container">
  <h1 class="text-center mt-5">Login</h1>

  <div class="border p-5 my-5 border">
    <h2 class="text-left mb-5">Social connexion</h2>
    <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-google px-5 py-2" do %>
      <%= image_tag('google.png', width: 30, height: 30, class: "mr-3") %> GOOGLE
    <% end %>
    <%= link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-facebook px-5 py-2" do %>
      <%= image_tag('facebook.jpg', width: 40, height: 40, class: "mr-3") %> FACEBOOK
    <% end %>
  </div>

  <div class="border p-5 mb-5">
    <h2 class="text-left mb-5">Manual connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>
